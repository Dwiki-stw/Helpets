<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="50dp"
        android:id="@+id/itm_photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:src="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Sample"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/intersemibold"
        app:layout_constraintTop_toBottomOf="@id/itm_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forexample@gmail.com"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:fontFamily="@font/intermedium"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_jalan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jalan ForExample"
        android:drawableStart="@drawable/ic_location_on"
        android:drawablePadding="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:fontFamily="@font/intermedium"
        app:layout_constraintTop_toBottomOf="@id/text_email"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="999 Postingn"
        android:drawableStart="@drawable/ic_pos"
        android:drawablePadding="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:fontFamily="@font/intermedium"
        app:layout_constraintTop_toBottomOf="@id/text_jalan"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:text="@string/logout"
        android:fontFamily="@font/interbold"
        android:backgroundTint="@color/merah"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>