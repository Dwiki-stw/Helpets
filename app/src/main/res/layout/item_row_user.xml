<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_row_story"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:drawableStart="@drawable/ic_account"
            android:drawablePadding="8dp"
            android:text="User Name"
            android:fontFamily="@font/intermedium"
            android:textColor="@color/black"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageview"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/textView"

            />
        <TextView
            android:id="@+id/textdescription"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_sample"
            android:maxLines="2"
            android:maxWidth="350dp"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageview"/>

        <TextView
            android:id="@+id/text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textStyle="italic"
            android:maxWidth="350dp"
            android:maxLines="1"
            android:textSize="10dp"
            android:text="@string/text_address"
            app:layout_constraintTop_toBottomOf="@id/textdescription"
            app:layout_constraintStart_toStartOf="@id/textdescription"
            />
        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textOn=""
            android:textOff=""
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/favorite_icon"
            app:layout_constraintEnd_toEndOf="@id/imageview"
           app:layout_constraintTop_toTopOf="@id/textdescription"
            app:layout_constraintBottom_toBottomOf="@id/text_address"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>